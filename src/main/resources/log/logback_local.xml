<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 使用Spring Boot默认转换器 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- 自定义控制台输出格式 -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %clr(%5p) %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} : %m%n%wEx"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- 全局日志级别 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- ========== 业务日志 ========== -->
    <logger name="com.hsx" level="DEBUG"/>

    <!-- ========== 第三方库日志控制 ========== -->
    <!-- 严重警告降级 -->
    <logger name="org.springframework.boot.devtools" level="ERROR"/>
    <logger name="org.apache.fontbox" level="ERROR"/>
    <logger name="org.apache.tomcat.util.http.parser.Cookie" level="ERROR"/>
    <logger name="org.bytedeco" level="ERROR"/>
    <logger name="com.zaxxer.hikari.HikariConfig" level="ERROR"/>

    <!-- 详细日志降级 -->
    <logger name="org.springframework.ai" level="WARN"/>
    <logger name="com.datastax.oss" level="WARN"/>
    <logger name="org.springframework.data.repository.config" level="WARN"/>
    <logger name="org.hibernate.validator" level="WARN"/>

    <!-- SQL日志（开发环境开启） -->
    <logger name="java.sql" level="INFO"/>
    <logger name="org.apache.ibatis" level="INFO"/>
    <logger name="com.baomidou.mybatisplus" level="INFO"/>
</configuration>